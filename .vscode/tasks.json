{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build ex5",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${workspaceFolder}",
                "./ex5/mathutils.cpp",
                "./ex5/main.cpp",
                "-o",
                "${workspaceFolder}\\program.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build and run ex5."
        },
        {
            "type": "shell",
            "label": "Run program",
            "command": "${workspaceFolder}\\program.exe",
            "group": {
                "kind": "test"
            },
            "detail": "Run the compiled program."
        }
    ],
    "version": "2.0.0"
}